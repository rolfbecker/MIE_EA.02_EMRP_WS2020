<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
	
	<grid name="attendanceLine-grid" title="AttendanceLine" model="com.axelor.apps.rku.db.AttendanceLine" editable="true">
		<hilite if="present == 0" color="danger"/>
		 <field name="student" readonly="true"/>
		 <field name="present" readonly="true"/>
		 <field name="attendanceDate" readonly="true"/>
		 <field name="subject" readonly="true"/>
		 <field name="semesterConfig" readonly="true"/>
		 <field name="branchConfig" readonly="true"/>
		 <field name="currentYear" readonly="true"/>
	</grid>
	
	<grid model="com.axelor.apps.rku.db.AttendanceLine" title="Attendance student" name="attendance-student-line">
		<hilite if="present == 0" color="danger"/>
		<field name="subject" readonly="true"/>
		<field name="present" readonly="true"/>
		<field name="attendanceDate" readonly="true"/>
	</grid>

	<form name="attendanceLine-form" title="AttendanceLine" model="com.axelor.apps.rku.db.AttendanceLine" editable="true">
		
		<panel name="mainAttendanceLinePanal">
			 <field name="student" readonly="true"/>
			 <field name="present" readonly="true"/>
			 <field name="attendanceDate" readonly="true"/>
			 <field name="subject" readonly="true"/>
			 <field name="semesterConfig" readonly="true"/>
			 <field name="branchConfig" readonly="true"/>
			 <field name="currentYear" readonly="true"/>
		</panel>

	</form>
	
	<form name="attendanceLine-student-form" title="Student attendance line" model="com.axelor.apps.rku.db.AttendanceLine">
		
		<panel name="mainAttendanceStudentLinePanal">
			 <field name="student" readonly="true"/>
			 <field name="present" readonly="true"/>
			 <field name="attendanceDate" readonly="true"/>
			 <field name="subject" readonly="true"/>
			 <field name="semesterConfig" readonly="true"/>
			 <field name="branchConfig" readonly="true"/>
		</panel>

	</form>
	
</object-views>

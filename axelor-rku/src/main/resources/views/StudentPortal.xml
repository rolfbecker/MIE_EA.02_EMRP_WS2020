<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
	
	<grid name="student-portal-grid" title="Student" model="com.axelor.apps.rku.db.StudentPortal">
		 <field name="enrollmentNo"/>
		 <field name="email"/>
		 <field name="firstName"/>
		 <field name="phoneNo"/>
	</grid>

	<form name="student-portal-form" title="Student Portal" model="com.axelor.apps.rku.db.StudentPortal"  width="large" onNew="action-student-portal-attrs-set-user">
		
		<panel name="studentPanel">
			<field name="firstName" colSpan="3" required="true" />
			<field name="sureName" colSpan="3" required="true" />
			<field name="lastName" colSpan="3" required="true" />
			<field name="enrollmentNo" required="true"/>
			<field name="dateOfBirth" required="true"/>
			<field name="email" required="true"/>
			<field name="phoneNo" required="true"/>
			<field name="startYear" required="true"/>
			<field name="endYear" required="true"/>
			<field name="address" required="true" type="text"></field>
		</panel>
		
		<panel name="studentInfoPanel">
			<field name="activeUser"/>	
			<field name="currentSem" onChange="action-student-portal-method-set-subject"/>	
		</panel>
		
		<panel name="CoursePanal">
			<field name="course"  required="true" />
			<field name="branch" required="true" onChange="action-student-portal-method-set-subject"/>
		</panel>
		
		<panel-related field="subjectSet" name="subjectPanel" canSelect="true" canEdit="false" canNew="false"/>
			
		<panel name="dataPanel" sidebar="true" >
			<field name="createdOn"/>
			<field name="updatedOn"/>
			<field name="createdBy"/>
			<field name="updatedBy"/>
		</panel>
		
		<panel name="userPanel" sidebar="true">
			<field name="userStudent"/>
		</panel>
		
	</form>
	
	<action-attrs name="action-student-portal-attrs-set-user">
		<attribute name="value" for="userStudent" expr="eval: __user__"/>
		 <attribute name="value" expr="eval: __user__.name " for="enrollmentNo"/>
	</action-attrs>
	
	<action-method name="action-student-portal-method-set-subject">
		<call class="com.axelor.apps.rku.web.StudentPortalController" method="setSubject"/>
	</action-method>
	
</object-views>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
	

	<form name="password-form" title="Password" model="com.axelor.apps.rku.db.Password" >
		
		<panel name="mainPasswordPanal">
			 <field name="userName"/>
			 <field name="email"/>
			 <field name="newPassword"/>
			 <field name="confirmPassword"/>
		</panel>
		<panel>
			<button name="setPassword" title="Set Password" onClick="action-passord-method-reset-password"/>
		</panel>

	</form>
	
	<action-method name="action-passord-method-reset-password">
		<call class="com.axelor.apps.rku.web.PasswordController" method="setPassword"/>
	</action-method>
	
</object-views>

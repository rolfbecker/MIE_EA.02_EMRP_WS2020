<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid name="device-grid" title="Device" model="com.axelor.apps.mqtt.db.Device">
		<field name="id" />
		<field name="name" />
		<field name="location" />
		<field name="sensor" title="Sensor"/>
	</grid>

	<form name="device-form" title="Device"
		model="com.axelor.apps.mqtt.db.Device">

		<panel>
			<field name="id" />
			<field name="name" />
			<field name="location" />
			<field name="sensor" title="Sensor" hidden="true" />
		</panel>
		
		<panel-related field="property" title="Property"/>

	</form>
</object-views>
